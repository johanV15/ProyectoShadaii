            <li class="breadcrumb-item active">Dashboard</li>
          </ol>
        </nav>
      </div>
      <section class="section dashboard">
        <div class="row">
          <div class="container">
            <h1 class="my-5">Registrar Gasto</h1>
            <form id="registroGastoForm">
              <div class="mb-3">
                <label for="descripcionInput"
                  class="form-label">Descripci√≥n</label>
                <input type="text" class="form-control" id="descripcionInput"
                  required />
              </div>
              <div class="mb-3">
                <label for="tipoGastoSelect" class="form-label">Tipo de
                  Gasto</label>
                <select class="form-select" id="tipoGastoSelect" required>
                  <option selected disabled value>Seleccione un tipo de
                    gasto</option>
                  {{#each gastos}}
                  <option value="{{this.id_tipo}}">{{this.id_tipo}}</option>
                  {{/each}}
                </select>
              </div>
              <div class="mb-3">
                <label for="valorInput" class="form-label">Valor</label>
                <input type="number" class="form-control" id="valorInput"
                  required />
              </div>
              <button type="submit" class="btn btn-primary">Registrar
                Gasto</button>
            </form>
          </div>
        </div>
      </section>
